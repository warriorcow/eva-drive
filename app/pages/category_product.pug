extends /app/templates/default

block preheader

block main
  main
    .container.container_blog
      .row.row_flex
        include /app/blocks/leftside/leftside
        .rightside
          +breadcrumbs({
            items: [{
              text: 'Главная',
              link: '#'
            },{
              text: 'Выбрать цвет',
              link: '#'
            },{
              text: 'Бирюзовый коврик',
              status: 'active'
            }]
          })
          +title({
            tag: 'h1',
            text: 'Универсальный набор крепления ковриков',
            mods: ['h1']
          })
          
          .product
            .product__preview
              +slider({
                thumbs: {
                  slides: [{
                    img: 'https://66.media.tumblr.com/baea33b98e5aa66abd0e5da888d06c44/tumblr_pkw4y0EZTh1uk7v3v_540.jpg'
                  },{
                    img: 'https://i.ytimg.com/vi/CQ85sUNBK7w/maxresdefault.jpg'
                  },{
                    img: 'https://boygeniusreport.files.wordpress.com/2015/06/funny-cat.jpg'
                  },{
                    img: 'https://i.pinimg.com/736x/3b/4f/55/3b4f55f606f04ed5300d1bcf589c010e.jpg'
                  }]
                }
              })

            .product__order
              p Коврики в салон для Acura MDX (с 2008 г.в.) от EVA-DRIVE – это изящная и очень надежная защита салона вашего автомобиля. Автоковрики легки, удобны и практичны в использовании.

              .product__params
                .product__params-title Параметры упаковки комплекта ковриков в салон: 

                .product__params-list 
                  span Размер:
                  span 550х750х80 мм
                  
                .product__params-list
                  span Вес:
                  span 2,5 кг

              .product__params
                .product__params-title Параметры упаковки комплекта ковриков в салон: 

                .product__params-list 
                  span Размер:
                  span 550х750х80 мм
                  
                .product__params-list
                  span Вес:
                  span 2,5 кг
             
              +button({text: 'Выбрать комплектацию'})

          +title({
            tag: 'h2',
            mods: ['h2'],
            text: 'Комплектация и стоимость'
          })
          
          p Всегда можно заказать как комплект, так и любые коврики по отдельности.
          
          .product__complect
            img.product__scheme(src="img/complect.png", alt="complect")
            form.product__form
              fieldset
                .product__title Выберите материал:
                .product__box
                  +input({
                    id: '1',
                    type: 'radio',
                    name: '',
                    img: 'https://i.redd.it/25s04u40uqy11.jpg',
                    mods: ['circle'],
                    checked: true,
                  })
                  +input({
                    id: '2',
                    type: 'radio',
                    name: 'risess',
                    img: 'https://i.redd.it/25s04u40uqy11.jpg',
                    mods: ['circle'],
                  })

              fieldset
                .product__title Выберите комплектацию:
                .product__box
                  +input({
                    id: '7',
                    type: 'radio',
                    name: 'complect',
                    mods: ['text', 'full'],
                    more: {
                      title: 'Комплект ковриков в салон (5 мест)',
                      price: '2805 руб.',
                      lists: ['1- водительский коврик;', '2 - пассажирский коврик;', '3 - цельный ковер второго ряда']
                    }
                  })

                  +input({
                    id: '6',
                    type: 'radio',
                    name: 'complect',
                    mods: ['text', 'full'],
                    more: {
                      title: 'Комплект ковриков в салон (5 мест)',
                      price: '2805 руб.',
                      lists: ['1- водительский коврик;', '2 - пассажирский коврик;', '3 - цельный ковер второго ряда']
                    }
                  })

              fieldset
                .product__title Выберите комплектацию:
                .product__box
                  +input({
                    id: '28',
                    type: 'radio',
                    name: 'mat',
                    img: 'input__visual',
                    mods: ['text'],
                    checked: true,
                    text: '1. Водительский коврик'
                  })
                  +input({
                    id: '29',
                    type: 'radio',
                    name: 'mat',
                    img: 'input__visual',
                    mods: ['text'],
                    checked: true,
                    text: '1. Водительский коврик'
                  })

              fieldset
                .product__title Выберите цвета:
                .product__box
                  +select({
                    options: [{
                      value: 'Не выбран'
                    },{
                      value: 'Красный',
                    },{
                      value: 'Зеленый',
                    },{
                      value: 'Синий',
                    }]
                  })
              

          +title({
            tag: 'h2',
            mods: ['h2'],
            text: 'Фотогаллерея'
          })

          +slider({
            slides: [{
              img: 'img/slider-img.png'
            },{
              img: 'img/slider-img.png'
            },{
              img: 'img/slider-img.png'
            },{
              img: 'img/slider-img.png'
            },{
              img: 'img/slider-img.png'
            },{
              img: 'img/slider-img.png'
            },{
              img: 'img/slider-img.png'
            },{
              img: 'img/slider-img.png'
            }]
          })

          +title({
            tag: 'h2',
            mods: ['h2'],
            text: 'Вас также могут заинтересовать'
          })

          +slider({
            products: {
              slides: [{
                image_sourse: 'img/slider-img.png',
                title: 'Универсальный набор крепления ковриков'
              },{
                image_sourse: 'img/slider-img.png',
                title: 'Универсальный набор крепления ковриков'
              },{
                image_sourse: 'img/slider-img.png',
                title: 'Универсальный набор крепления ковриков'
              },{
                image_sourse: 'img/slider-img.png',
                title: 'Универсальный набор крепления ковриков'
              }]
            }
          })

          include /app/blocks/comment/comment
          +share({mods: ['right']})

